" Wayne Robison
" Personalized vimrc file specific for use with Visual Studio via VsVim

set backspace=indent,eol,start
set laststatus=2

set tabstop=4
set shiftwidth=4
set expandtab

set history=50

set ignorecase
set smartcase

set number

set hlsearch
nnoremap <Space> :nohlsearch<CR>

noremap <F6> :set list!<CR>
noremap <F4> :set hlsearch! hlsearch?<CR>

set visualbell

set autoindent
